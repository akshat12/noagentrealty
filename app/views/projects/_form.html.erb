<h2>(*) Required Fields<h2>

  <%= form_for(@project) do |f| %>
  <%= render 'shared/project_error_messages' %>


  <div class="row-fluid">
    <div class="span7 item">
      <div class="drop-shadow lifted">
        <div class="field">
          <%= f.label :image %>
          <% if @project.image? %>
          <%= image_tag(@project.image_url) %>
          <div>
            <br />
            <%= f.check_box :remove_image %>
            <%= f.label :remove_image, :style => "display:inline" %>
          </div>
          <br />
          <% end %>
          <%= f.file_field :image %>
          <%= f.hidden_field :image_cache %>
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span9 drop-shadow lifted description-input">
      <div class="row-fluid">
        <div class="field">
          <%= f.label :name, 'Project Name', :style => "display:inline"  %>*
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="field">
          <%= f.label :description, 'Description', :style => "display:inline"  %>*
          <%= f.text_area :description %>
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span11" style="margin-top:-10px">
      <%= f.submit 'Submit', :class => "btn btn-large btn-success" %>
      <%= link_to 'Cancel', projects_path, :class => "btn btn-large btn-danger" %>
    </div>
  </div>
  <% end %>