<h1>Contact Us</h1>

<div class ="row-fluid">
	<div class="span12 drop-shadow lifted contactform">
		<div class ="row-fluid">
			<%= form_for @message, :url => contact_path do |f| %>
			<%= render 'shared/message_error_messages' %>
			<div class="field input-xlarge">
				<%= f.label :name, 'Your name' %>
				<%= f.text_field :name %>
			</div>
			<div class="field input-xlarge">
				<%= f.label :email, 'Email' %>
				<%= f.text_field :email %>
			</div>
			<div class="field">
				<%= f.label :subject %>
				<%= f.text_field :subject %>
			</div>
			<div class="field">
				<%= f.label :content, "Message" %>
				<%= f.text_area :content, :rows => 5 %>
			</div>
			<div class="actions"><%= f.submit "Send Message",:class => "btn btn-large btn-success" %></div>
			<% end %>
		</div>
	</div>
</div>