<% provide(:title, 'confirm') %>

<h1>Confirm Account Creation</h1>

<div class="row">
	<div class="span6 offset3">
           <%= form_tag url_for(:controller => 'users', :action => 'check_confirm_code'), :method => 'put' do %>

            <div class = "field">
               <b> Enter code </b>
               <%= text_field_tag :code, params[:code] %>
            </div>
 

            <%= submit_tag "Verify", :class => "btn btn-large btn-success" %>
           <% end %>

</div>
</div>
