<% if @message.errors.any? %>
    <div class="alert alert-error">
      <strong> The form contains <%= pluralize(@message.errors.count, "error") %>: </strong>
    
    <ul>
    <% @message.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
   
  </div>
<% end %>
