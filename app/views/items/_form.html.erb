<h2>(*) Required Fields<h2>

  <%= form_for(@item) do |f| %>
  <%= render 'shared/item_error_messages' %>
  
  <div class="row-fluid">
    <div class="span7 item">
      <div class="drop-shadow lifted">
        <div class="field">
          <%= f.label :image %>
          <% if @item.image? %>
          <%= image_tag(@item.image_url) %>
          <div>
            <br />
            <%= f.check_box :remove_image %>
            <%= f.label :remove_image, :style => "display:inline" %>
          </div>
          <br />
          <% end %>
          <%= f.file_field :image %>
          <%= f.hidden_field :image_cache %>
        </div>
      </div>
    </div>
  </div>


  <div class="row-fluid">
    <div class="span7 drop-shadow lifted description-input">

      <div class="row-fluid">
        <div class="field">
          <%= f.label :name, :style => "display:inline" %>*
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="field">
          <%= f.label :description, :style => "display:inline" %>*
          <%= f.text_area :description %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="field span4">
          <%= f.label :category, :style => "display:inline"%>*
          <%= f.select :category, item_categories %>
        </div>

        <div class="field span4">
          <%= f.label :condition, :style => "display:inline" %>*
          <%= f.select :condition, item_conditions %>
        </div>

      </div>

      <div class="row-fluid">
        <div class="field span4">
          <%= f.label :available_from, 'Available From', :style => "display:inline" %>*
          <%= text_field :item, :available_from %>
        </div>

        <div class="field span4 offset1">
          <%= f.label :available_until, 'Available Until', :style => "display:inline" %>*
          <%= text_field :item, :available_until %>
        </div>
      </div>

    </div>
    <div class="span4 drop-shadow lifted description-input">

      <div class="field input-medium">
        <%= f.label :quantity, 'Quantity' %>
        <%= f.number_field :quantity, :min => 0 %>
      </div>

      <div class="field input-medium">
        <%= f.label :price, 'Price($)' %>
        <%= f.number_field :price, :step => "0.1", :min => 0 %>
      </div>

      <div class="field input-medium">
        <%= f.label :length, 'Length (m)' %>
        <%= f.number_field :length, :step => "0.1", :min => 0 %>
      </div>

      <div class="field input-medium">
        <%= f.label :width, 'Width (m)' %>
        <%= f.number_field :width, :step => "0.1", :min => 0 %>
      </div>

      <div class="field input-medium">
        <%= f.label :height, 'Height (m)' %>
        <%= f.number_field :height, :step => "0.1", :min => 0 %>
      </div>

      <div class="field input-medium">
        <%= f.label :weight, 'Weight (kg)' %>
        <%= f.number_field :weight, :step => "0.1", :min => 0 %>
      </div>

      <div>
        <%= f.fields_for :location do |ff| %>
        <div class="field">
          <%= ff.label :address, 'Location' %>
          <%= ff.text_field :address %>
        </div>
        <% end %>
      </div>

    </div>
  </div>
  <div class="row-fluid">
    <div class="span11" style="margin-top:-26px">
      <%= f.submit 'Submit', :class => "btn btn-large btn-success" %>
      <%= link_to 'Cancel', items_path, :class => "btn btn-large btn-danger" %>
    </div>
  </div>
  <% end %>
