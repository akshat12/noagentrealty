<h2>(*) Required Fields<h2>

  <%= form_for(@item) do |f| %>
  <%= render 'shared/item_error_messages' %>
  
  <div class="row-fluid">
    <div class="span7 item">
      <div class="drop-shadow lifted">
        <div class="field">
          <%= f.label :image %>
          <% if @item.image? %>
          <%= image_tag(@item.image_url) %>
          <div>
            <br />
            <%= f.check_box :remove_image %>
            <%= f.label :remove_image, :style => "display:inline" %>
          </div>
          <br />
          <% end %>
          <%= f.file_field :image %>
          <%= f.hidden_field :image_cache %>
        </div>
      </div>
    </div>
  </div>


  <div class="row-fluid">
    <div class="span7 drop-shadow lifted description-input">

      <div class="row-fluid">
        <div class="field">
          <%= f.label :name, :style => "display:inline" %>*
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="field">
          <%= f.label :description, :style => "display:inline" %>*
          <%= f.text_area :description %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="field span4">
          <%= f.label :property_type, :style => "display:inline"%>*
          <%= f.select :property_type, item_categories %>
        </div>


      </div>

      <div class="row-fluid">
        <div class="field span4">
          <%= f.label :available_from, 'Available From', :style => "display:inline" %>*
          <%= text_field :item, :available_from %>
        </div>

        <div class="field input-medium">
          <%= f.label :lease_duration, 'Lease Duration (Months)' %>
          <%= f.number_field :lease_duration, :step => "1", :min => 3 %>
        </div>

        <div class="field input-medium">
          <%= f.label :rent, 'Rent' %>
          <%= f.number_field :rent, :step => "100", :min => 500 %>
        </div>

      </div>

    </div>
    <div class="span4 drop-shadow lifted description-input">

    
      <div class="field input-medium">
        <%= f.label :number_of_rooms, 'Number of Rooms' %>
        <%= f.number_field :number_of_rooms, :step => "1", :min => 0 %>
      </div>

      <div class="field input-medium">
        <%= f.label :number_of_bathrooms, 'Number of Bathrooms' %>
        <%= f.number_field :number_of_bathrooms, :step => "0.5", :min => 1 %>
      </div>

      <div class="field input-medium">
        <%= f.label :number_of_study, 'Number of Study' %>
        <%= f.number_field :number_of_study, :step => "1", :min => 0 %>
      </div>

      <div class="field input-medium">
        <%= f.label :unit_number, 'Unit Number' , :style => "display:inline" %>*
        <%= f.text_field :unit_number %>
      </div>

      <div class="field input-medium">
        <%= f.label :postal_code, 'Postal Code' %>
        <%= f.text_field :postal_code %>
      </div>


    </div>
  </div>
  <div class="row-fluid">
    <div class="span11" style="margin-top:-26px">
      <%= f.submit 'Submit', :class => "btn btn-large btn-success" %>
      <%= link_to 'Cancel', items_path, :class => "btn btn-large btn-danger" %>
    </div>
  </div>
  <% end %>
