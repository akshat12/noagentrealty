<%= form_for(@news) do |f| %>
<%= render 'shared/news_error_messages' %>

<%= tinymce %>

<div class="row-fluid">
  <div class="span7 item">
    <div class="drop-shadow lifted">
      <div class="field">
        <%= f.label :image %>
        <% if @news.image? %>
        <%= image_tag(@news.image_url) %>
        <div>
          <br />
          <%= f.check_box :remove_image %>
          <%= f.label :remove_image, :style => "display:inline" %>
        </div>
        <br />
        <% end %>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      </div>
    </div>
  </div>
</div>


<div class="row-fluid">
  <div class="span9 drop-shadow lifted description-input">
    <div class="row-fluid">
      <div class="field span11">
        <%= f.label :title, 'Headline' %>
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="field span11">
        <%= f.label :content, 'Article Body' %>
        <%= f.text_area :content, :class => "tinymce" %>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span11" style="margin-top:-10px">
    <%= f.submit 'Submit', :class => "btn btn-large btn-success" %>
    <%= link_to 'Cancel', news_index_path, :class => "btn btn-large btn-danger" %>
  </div>
</div>
<% end %>