<h2>(*) Required Fields<h2>

  <%= form_for(@event) do |f| %>
  <%= render 'shared/event_error_messages' %>

  <div class="row-fluid">
    <div class="span7 item">
      <div class="drop-shadow lifted">
        <div class="field">
          <%= f.label :image %>
          <% if @event.image? %>
          <%= image_tag(@event.image_url) %>
          <div>
            <br />
            <%= f.check_box :remove_image %>
            <%= f.label :remove_image, :style => "display:inline" %>
          </div>
          <br />
          <% end %>
          <%= f.file_field :image %>
          <%= f.hidden_field :image_cache %>
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span7 drop-shadow lifted description-input">

      <div class="row-fluid">
        <div class="field">
          <%= f.label :name,:style => "display:inline" %>*
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="field">
          <%= f.label :description,:style => "display:inline" %>*
          <%= f.text_area :description %>
        </div>
      </div>

    </div>



    <div class="span4 drop-shadow lifted description-input">

      <div class="field">
        <%= f.label :event_date, :style => "display:inline" %>*
        <%= f.text_field :event_date %>
      </div>
      <div class="field input-small">
        <%= f.label :start_time, :style => "display:inline" %>*
        <%= f.time_select :start_time, {:minute_step => 5, :ampm => true} %>
      </div>
      <div class="field input-small">
        <%= f.label :end_time %>
        <%= f.time_select :end_time, {:minute_step => 5, :ampm => true} %>
      </div>

      <div class="field">
        <%= f.fields_for :location do |ff| %>
        <div>
          <%= ff.label :address, 'Location', :style => "display:inline" %>*
          <%= ff.text_field :address %>
        </div>
        <% end %>
      </div>

    </div>
  </div>


  <div class="row-fluid">
    <div class="span11" style="margin-top:-26px">
      <%= f.submit 'Submit', :class => "btn btn-large btn-success" %>
      <%= link_to 'Cancel', events_path, :class => "btn btn-large btn-danger" %>
    </div>
  </div>
  <% end %>
