<% provide(:title, "Sign In") %>
<% session[:return_to] ||= request.referer %>
<div class="row-fluid">

  <div class="span12 top-page">
    <h1 style="text-align:center;">Welcome</h1>
    <h2 style="text-align:center;">Sign in</h2>
  </div>

</div>

<div class="row">
	<div class="span6 offset3">

		<%= form_for(:session, url: sessions_path) do |f| %>
                                 

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit "Sign In", class: "btn btn-large btn-success" %>
		<% end %>

		<p>New User? <%= link_to "Sign Up", signup_path, class: "custom-link" %></p>
    <p>Forgot Your Password? <%= link_to "Send Reminder", new_password_reset_path, class: "custom-link" %></p>

	</div>
</div>
